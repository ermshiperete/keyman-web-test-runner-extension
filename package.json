{
  "name": "web-test-runner-extension",
  "displayName": "web-test-runner-extension",
  "description": "A VSCode extension for web-test-runner",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Testing"
  ],
  "activationEvents": [
    "workspaceContains:web-test-runner.config.*",
    "workspaceContains:**/*.test.ts",
    "workspaceContains:**/*.test.js",
    "workspaceContains:**/*.spec.ts",
    "workspaceContains:**/*.spec.js"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "web-test-runner-extension.runAll",
        "title": "Run All Tests",
        "icon": "$(run-all)"
      },
      {
        "command": "web-test-runner-extension.refreshTests",
        "title": "Refresh Tests",
        "icon": "$(refresh)"
      },
      {
        "command": "web-test-runner-extension.runTest",
        "title": "Run Test",
        "icon": "$(run)"
      }
    ],
    "views": {
      "test": [
        {
          "id": "webTestRunnerExplorer",
          "name": "Web Test Runner",
          "when": "workspaceFolder != undefined"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "web-test-runner-extension.runAll",
          "when": "view == webTestRunnerExplorer",
          "group": "navigation"
        },
        {
          "command": "web-test-runner-extension.refreshTests",
          "when": "view == webTestRunnerExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "web-test-runner-extension.runTest",
          "when": "view == webTestRunnerExplorer",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@web/test-runner": "^0.18.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
